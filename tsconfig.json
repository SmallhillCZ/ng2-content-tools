{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es2015", "dom"],
		"noImplicitAny": false,
		"typeRoots": [
			"node_modules/@types/"
		]
	},
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules"
	]
}